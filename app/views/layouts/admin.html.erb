<!DOCTYPE>
<html>
	<head>
		<title>Simple CMS: <%= @page_title || "Admin Area" %></title>
		<%= stylesheet_link_tag('admin', :media => 'all') %>
	</head>
	<body>
	
	<div id="header">
		<h1>Content Managment System</h1>	
		<div id="public"><%= link_to "View Public", root_path %></div>	
	</div>

	
	
	<div id="main">
		<% if !flash[:notice].blank? %>		
			<div class="notice">
				<%= flash[:notice] %>
			</div>
		<% end %>
		
		<div id="content">
			<%= yield %>	
		</div>		
	</div>
	<div id="footer">
		<p id="copyright">&copy; <a href="http://mattwarren.us">Matt Warren</a></p>
	</div>

	</body>
</html>